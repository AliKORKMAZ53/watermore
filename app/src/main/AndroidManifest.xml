<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miragesw.watermore">

    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Watermore">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-9349705227439488~5211430390"/>
        <activity android:name="com.miragesw.watermore.settings"></activity>
        <activity android:name="com.miragesw.watermore.Donate" />
        <activity android:name="com.miragesw.watermore.AboutUs" />
        <activity
            android:name="com.miragesw.watermore.FullscreenSplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Watermore"
            android:theme="@style/Theme.Watermore.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.miragesw.watermore.GraphicActivity" />
        <activity android:name="com.miragesw.watermore.ReminderScreen" />
        <activity android:name="com.miragesw.watermore.HealthStats" />
        <activity
            android:name="com.miragesw.watermore.usernamesPop"
            android:theme="@style/PopMe" />
        <activity
            android:name="com.miragesw.watermore.AddWaterPopScreen"
            android:theme="@style/PopMe" />
        <activity
            android:name="com.miragesw.watermore.MainPage"
            android:launchMode="singleTask" />
        <activity android:name=".LauncherActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <receiver android:name=".utils.MyNotificationPublisher" />
    </application>

</manifest>